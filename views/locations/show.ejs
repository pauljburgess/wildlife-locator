<%- include('../partials/header') %>


    <section id="show-container">
        <h1 id="show-header">
            <%= location.name %>
        </h1>
        <div id="show-details">
            <%= location.address %>
            <br><br>
            <a href="<%= location.website %>">
                    <%= location.website %>
            </a>
        </div>
    </section>

    <!-- The form below is nearly identical to the Add Performer one from Mongoose Movies -->
    <section>
        <form action="/locations/<%= location._id %>/species" method="POST">
            <select name="speciedId">
                <%- species.map(s => 
                `<option value="${s._id}">${s.name}</option>`
                ).join('') %>
            </select>
            <button type="submit">Add Species</button>
        </form>
    </section>

<%- include('../partials/footer') %>