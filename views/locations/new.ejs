<%- include('../partials/header') %>


    <h1>Add a New Location below:</h1>

    <div class="form-style">
        <form id="new-location-form" action="/locations" method="POST">
            <label>Name:</label>
            <input type="text" name="name" id="">
            <br><br>
            <label>Address:</label>
            <input type="text" name="address" id="">
            <br><br>
            <label>Latitude:</label>
            <input type="number" step="any" name="latitude" id="">
            <br><br>
            <label>Longitude:</label>
            <input type="number" step="any" name="longitude" id="">
            <br>
            <p id="note"><strong>Note:</strong> Adding the Latitude and Longitude will allow the display of a map. <br>  We recommend <a href="https://www.latlong.net/">this</a> website to find them.</p>
            <label>Location Website:</label>
            <input type="text" name="website" id="">
            <br><br>
            <button type="submit">Submit</button>
        </form>
    </div>


<%- include('../partials/footer') %>